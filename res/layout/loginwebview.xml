<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceMain" >

    <Button
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_url"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="GO" />
	
    <EditText
        android:id="@+id/txt_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_go"
        android:ems="10"
        android:inputType="textPostalAddress" />
    
    <com.appable.androidlib.lightwebbrowser.WebBrowserView 
        android:id="@+id/lightbrowser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_url"/>

</RelativeLayout>